
@{
    ViewBag.Title = "Consulta";
}

<link href="~/Content/sweetalert/sweetalert2.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/js/JSBiblioteca.js"></script>
<script src="~/Scripts/sweetalert2.js"></script>

<div class="panel panel-default" style="margin-top:50px">
    <div class="panel-heading"><span class="glyphicon glyphicon-filter" aria-hidden="true"></span>| <strong>Filtros</strong></div>
    <div class="panel-body">
        <form class="form-inline">
            <div class="form-group" style="width:300px">
                <label for="nome" class="control-label">Nome</label>
                <input type="text" class="form-control" style="width:85%" id="NomeFiltro" name="nome" placeholder="Nome do livro">
            </div>
            <div class="form-group" style="width:300px">
                <label for="autor" class="control-label">Autor</label>
                <input type="text" class="form-control" style="width:85%" id="AutorFiltro" name="autor" placeholder="Autor do livro">
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary" id="btnConsultar" onclick="return Consultar();">Consultar</button>
                <button type="button" class="btn btn-primary" id="btnLimparFiltro" onclick="return loadData();">Limpar Filtro</button>
            </div>
        </form>
        <hr />
    </div>
</div>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalAddOrEdit" onclick="clearTextBox();">Adicionar Livro</button><br /><br />
<div class="panel panel-default">
    <div class="panel-heading"><span class="glyphicon glyphicon-list" aria-hidden="true"></span>| <strong>Lista de Livros</strong></div>
    <div class="panel-body">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-content">
                                <table class="table table-striped table-bordered table-hover dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>
                                                Nome
                                            </th>
                                            <th>
                                                Autor
                                            </th>
                                            <th>
                                                Editora
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody class="tbody"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modalAddOrEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>| <strong>Livro</strong>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="panel-body" style="padding:0px!important">
                        <div class="row">
                            <!-- Material form login -->
                            <div class="card">
                                <div class="row">
                                    <label for="Id">ID</label>
                                    <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                                </div>
                                <div class="row">
                                    <label for="Nome">Nome</label>
                                    <input type="text" class="form-control" id="Nome" placeholder="Nome" />
                                </div>
                                <div class="row">
                                    <label for="Autor">Autor</label>
                                    <input type="text" class="form-control" id="Autor" placeholder="Autor" />
                                </div>
                                <div class="row">
                                    <label for="Editora">Editora</label>
                                    <input type="text" class="form-control" id="Editora" placeholder="Editora" />
                                </div>
                                <div class="row">
                                    <label for="Ano">Ano</label>
                                    <input type="number" maxlength="4" class="form-control" id="Ano" placeholder="Ano" />
                                </div>
                                <div class="row">
                                    <label for="Descricao">Descrição</label>
                                    <input type="text" class="form-control" id="Descricao" placeholder="Descrição" />
                                    @*<textarea cols="100" rows="1" class="form-control" id="Descricao" placeholder="Descricao" />*@
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="pull-right">
                            <button type="button" class="btn btn-primary" id="btnAdicionar" onclick="return Adicionar();">Adicionar</button>
                            <button type="button" class="btn btn-primary" id="btnAtualizar" onclick="Atualizar();">Atualizar</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


